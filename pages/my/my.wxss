
page {
    background-color: #f7f8fa;
}
.user {
    width: 100%;
    height: 290px;
    /* background-color: pink; */
}
.bg {
    position: relative;
    width: 100%;
    height: 290px;
    top:0;
    left: 0;
    filter: blur(3rpx);
    -webkit-filter: blur(20rpx);
}

.con {
    position: absolute;
    left: 50%;
    top: 20%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: #f7f8fa;
}
.headimg {
    width: 200rpx;
    height: 200rpx;
}
.headimg image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.uname{
    margin-top: 10px;
}
.login_btn {
    position: absolute;
    left: 50%;
    top: 10%;
    transform: translateX(-50%);
    font-weight: 700;   
    font-size: 30px;
    padding: 30rpx;
    border-radius: 10rpx;
}

