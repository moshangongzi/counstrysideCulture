page {
    background-color: #f7f8fa;
}

.user {
    width: 100%;
    height: 290px;
}

.bg {
    position: relative;
    width: 100%;
    height: 335px;
    top: 0;
    left: 0;
    filter: blur(18rpx);
    -webkit-filter: blur(18rpx);
}

.con {
    width: 80%;
    position: absolute;
    left: 50%;
    top: 182px;
    transform: translate(-50%, -50%);
    text-align: center;
    color: #f7f8fa;
}

.headimg {
    margin: 1px auto;
    width: 200rpx;
    height: 200rpx;
}

.headimg image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.uname {
    margin-top: 3px;
    font-size: 34rpx;
}

.edit {

    width: 85px;
    height: 40px;
    font-size: 16px;
}

.login_btn {
    position: absolute;
    left: 50%;
    top: 135px;
    transform: translateX(-50%);
    font-weight: 700;
    font-size: 30px;
    padding: 30rpx;
    border-radius: 10rpx;
}

/* 菜单 */
.menu_list,
.often_list,
.assist_list {
    display: flex;
    flex-wrap: wrap;
}

.menu_list {
    position: relative;
    top: 5px;
    left: 5%;
    width: 90%;
    background-color: #fff;
}

.menu_item,
.often_item,
.assist_item {
    width: 33.33%;
    height: 200rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    /*设置为不会被内容撑开*/
}

.menu_item image {
    width: 90rpx;
    height: 90rpx;
}

.menu_item text {
    font-size: 28rpx;
    margin-top: 10px;
}

.often_item image,
.assist_item image {
    width: 60rpx;
    height: 60rpx;
}

.often_item text,
.assist_item text {
    font-size: 24rpx;
    margin-top: 7px;
    /* font-weight: 500;
    text-indent:0 */
}

.often>text,
.assist>text {
    background-color:rgb(247, 247, 247);
    font-size: 32rpx;
    font-weight: 700;
    text-indent:1em;
    margin-bottom: 10rpx;
    padding:20rpx
}
.often {
    margin-top: 25px;
}
.assist {
    margin-top: 5px;
}