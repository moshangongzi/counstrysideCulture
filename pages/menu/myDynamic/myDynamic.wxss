/* 最新动态 */
.latest-dynamic {
    height: 100%;
}

.latest-dynamic-text {
    margin-left: 25rpx;
    font-weight: 700;
}

.latest-dynamic view:first-child {
    margin-top: 40rpx;
}

.latest-dynamic-list {
    /* height: 0; */
    margin: 25rpx 25rpx 20rpx 25rpx;
}

.user-info {
    position: relative;
    display: flex;
    align-items: center;
    height: 120rpx;
    padding: 0;
    margin-bottom: 12rpx;
    border-bottom: 2rpx solid #ebe7e7;
}

.user-info .public-time {
    position: absolute;
    right: 0rpx;
    margin-top: 5rpx;
    margin-left: 5rpx;
    font-size: 36rpx;
    color:  #858585;
}

.latest-dynamic-con {
    /* margin-left: 120rpx; */
