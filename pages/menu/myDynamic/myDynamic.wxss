    margin-top: 30rpx;
    padding: 0 60rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #ebe7e7;
    background-color: rgb(245, 244, 244);
}

.delete {
    color: #d83232;
    /* background-color: pink; */
}

.dianzan{
    display: flex;
