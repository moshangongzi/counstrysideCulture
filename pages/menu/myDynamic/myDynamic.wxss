.user-avatar {
    position: relative;
    width: 100%;
    height: 600rpx;
    margin-top: 62rpx;
}

.user-avatar .user-avatar-bg {
    width: 100%;
    height: 100%;
    filter: blur(11rpx);
    -webkit-filter: blur(11rpx);
}

.user-avatar text {
    position: absolute;
    bottom: 0rpx;
    right: 200rpx;
    color: white;
    font-size: 35rpx;

}

.user-avatar .user-avatar-small {
    position: absolute;
    bottom: -60rpx;
    right: 32rpx;
    width: 150rpx;
    height: 150rpx;
    border-radius: 10rpx;
    z-index: 99;
}

