.item {
    margin: 50rpx;
    border-bottom: 1px solid #ccc;
}

.img {
    display: inline-block;
    width: 140rpx;
    height: 140rpx;
}

.img image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    vertical-align: middle;
}

.item text {
    display: inline-block;
    width: 325rpx;
    font-size: 36rpx;
    margin-left: 30rpx;
}

.item button {
    border: 1px solid #d83232;
    margin-left: 25rpx;
    display: inline-block;
    width: 132rpx;
    height: 90rpx;
    vertical-align: middle;
    color:#d83232;
}