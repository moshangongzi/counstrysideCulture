.item {
    margin: 30rpx;
    padding-bottom: 20rpx;
    border-bottom: 1px solid #ccc;
}

.img {
    display: inline-block;
    width: 140rpx;
    height: 140rpx;
}

.img image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    vertical-align: middle;
}

.item text {
    display: inline-block;
    width: 338rpx;
    font-size: 36rpx;
    margin-left: 30rpx;
}

.item button {
    display: inline-block;
    width: 115rpx;
    height: 73rpx;
    margin-left: 25rpx;
    padding: 0rpx;
    font-size: 30rpx;
    line-height: 73rpx;
    color: #fff;
    vertical-align: middle;
    outline: none;
    background: transparent;
    background-color: #d83232;

}

.footer {
    width: 100%;
    position: fixed;
    bottom: 0px;
}