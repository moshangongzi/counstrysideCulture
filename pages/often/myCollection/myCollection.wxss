.content-list {
  margin-top: 64px;
  background-color: #fff;
  z-index: 1;
  position: relative;
}

.list-item {
  height: 400rpx;
  width: 100%;
  margin-bottom: 25rpx;
  box-sizing: border-box;
}

.list-item-content {
  position: relative;
  display: flex;
  height: 100%;
  padding: 20rpx 30rpx 20rpx 30rpx;
  box-sizing: border-box;
}

.list-item-content video {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.list-item-content .shipin-title {
  position: absolute;
  width: 85%;
  top: 35rpx;
  left: 57rpx;
  font-size: 40rpx;
  color: #fff;
}

.list-item-content .shipin-bofangshu {
  position: absolute;
  top: 315rpx;
  left: 545rpx;
  font-size: 30rpx;
  color: #fff;
}