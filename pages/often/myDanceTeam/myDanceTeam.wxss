.ditem {
    margin: 50rpx;
    border-bottom: 1px solid #ccc;
}

.dimg {
    display: inline-block;
    width: 140rpx;
    height: 140rpx;
}

.dimg image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    vertical-align: middle;
}

.ditem {
    display: flex;
    align-items: center;
}

.ditem text {
    display: inline-block;
    width: 325rpx;
    font-size: 36rpx;
    margin-left: 30rpx;
}

.ditem button {
    width: 115rpx;
    height: 73rpx;
    padding: 0rpx;
    /* margin-right: 25rpx; */
    z-index: -99;
    font-size: 30rpx;
    line-height: 73rpx;
    outline: none;
    border: 1rpx solid #bbbbbb;
    background: transparent;
    /* border: 1px solid #d83232; */
    margin-left: 25rpx;
    display: inline-block;
}
.footer{
    width: 100%;
    position: fixed;
    bottom: 0px;
}