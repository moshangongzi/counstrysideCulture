<navBar navBarTitle="发布照片" showBackIcon="true" />
<view class="publicPic">
    <!-- 输入要发布的内容 -->
    <view class="publicPic-con">
        <text class="publicPic-tip">请输入您要发布的内容</text>
        <form action="">
            <textarea bindinput="bindInput" class="textarea-con" type="text" placeholder="请输入内容..."></textarea>
        </form>
        <!-- 选择图片 -->
        <view class="select-pic" bindtap="chooseImg">
            <image src="https://636c-cloud1-4g8zgsp8753a10d4-1311372251.tcb.qcloud.la/icons/public/ai-up-img.png?sign=fb3508ea3bcb6c4a7e093a8479175faf&t=1654151615"></image>
            <text>上传图片</text>
        </view>
    </view>

</view>
<!-- 所在舞团 -->
<view class="select-team">
    <text>所在舞团</text>
    <text class="tname">{{tname}}</text>
</view>

<!-- 确认发布 -->
<view class="confirm-public">
    <button bindtap="confirmPublic">确认发布</button>
</view>